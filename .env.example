# Media Resolver MCP Server Configuration

# Server Settings
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Mopidy JSON-RPC Endpoint
MOPIDY_RPC_URL=http://mopidy:6680/mopidy/rpc
MOPIDY_TIMEOUT=10

# Icecast Stream URL (what devices will play)
# This should be accessible from your playback devices
ICECAST_STREAM_URL=http://icecast:8000/mopidy

# LLM Configuration
# Provider: anthropic, openai, ollama, azure, cohere
LLM_PROVIDER=anthropic
LLM_MODEL=claude-3-5-sonnet-20241022
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# API Keys (for cloud providers)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# For local/Ollama deployments
# OLLAMA_BASE_URL=http://localhost:11434

# Request History Settings
MAX_REQUEST_HISTORY=500
